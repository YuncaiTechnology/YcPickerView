<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="#3A8DF1"
        android:layout_height="44dp"
        android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/tv_cancel"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingBottom="20px"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20px">

            <TextView
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="取消"
                android:textColor="#fff"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:gravity="center"
            android:id="@+id/pickerTitleId"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="所在地区"
            android:textColor="#fff"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/tv_confirm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingBottom="20px"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20px">

            <TextView
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="完成"
                android:textColor="#fff"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>

    <ProgressBar
        android:background="#fff"
        android:id="@+id/pbLoading"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:background="#fff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <com.cloud.salesman.ui.client.view.wheelview.WheelView
            android:background="#fff"
            android:id="@+id/id_province"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"></com.cloud.salesman.ui.client.view.wheelview.WheelView>

        <com.cloud.salesman.ui.client.view.wheelview.WheelView
            android:background="#fff"
            android:id="@+id/id_city"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"></com.cloud.salesman.ui.client.view.wheelview.WheelView>

        <com.cloud.salesman.ui.client.view.wheelview.WheelView
            android:background="#fff"
            android:id="@+id/id_area"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"></com.cloud.salesman.ui.client.view.wheelview.WheelView>
    </LinearLayout>
</LinearLayout>
